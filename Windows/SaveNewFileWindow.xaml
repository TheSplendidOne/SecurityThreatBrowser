<Window x:Class="SecurityThreatBrowser.SaveNewFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecurityThreatBrowser"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Title="{DynamicResource DefaultTitle}">
    <StackPanel VerticalAlignment="Top">
        <TextBox
            MinWidth="300"
            Margin="20,20,20,0"
            materialDesign:HintAssist.Hint="Сохранить в папку"
            Name="DirectoryBox"/>
        <TextBox
            MinWidth="300"
            Margin="20,20,20,0"
            materialDesign:HintAssist.Hint="Имя файла (без расширения)"
            Name="NameBox"/>
        <Button Margin="20,20,20,20" Click="OnClick" Content="OK"></Button>
    </StackPanel>
</Window>
